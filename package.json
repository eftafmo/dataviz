{
  "name": "dataviz",
  "version": "0.9.0",
  "description": "EEA & Norway grants data and results portal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eftfmo/dataviz.git"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "lint": "run-s lint:css lint:js",
    "lint:js": "eslint --fix \"assets/**/*.js\" \"assets/**/*.vue\"",
    "lint:css": "prettier --write -c assets/css/",
    "build": "vite build",
    "serve": "vite preview"
  },
  "browserslist": [
    "IE >= 9",
    "last 2 versions",
    "> 5%"
  ],
  "config": {
    "dev-server-host": "0.0.0.0",
    "dev-server-port": "2992",
    "asset-dir": "assets",
    "build-dir": "../build"
  },
  "dependencies": {
    "clipboard": "^2.0.8",
    "d3": "^7.0.3",
    "d3-tip": "^0.9.1",
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.2",
    "lodash.orderby": "^4.6.0",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1",
    "vue": "^3.2.16",
    "vue3-tabs-component": "^1.0.3"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^4.1.1",
    "@vitejs/plugin-vue": "^1.9.1",
    "@vue/compiler-sfc": "^3.2.16",
    "autoprefixer": "^10.3.5",
    "classlist-polyfill": "^1.2.0",
    "es6-promise": "^4.2.8",
    "form-association-polyfill": "^2.0.3",
    "glob": "^7.2.0",
    "json5": "^2.2.0",
    "less": "^4.1.1",
    "topojson-client": "^3.1.0",
    "url-polyfill": "^1.1.12",
    "vite": "^2.9.13"
  },
  "optionalDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^7.18.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{less,css,scss}": [
      "prettier -c --write"
    ],
    "*.{js,jsx,vue}": [
      "eslint --fix"
    ]
  }
}
